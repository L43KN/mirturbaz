<p style="color: green"><%= notice %></p>

<h1>Camps</h1>

<%= link_to "New camps", new_camp_path, class: "btn btn-secondary" %>

<div id="camps">

  <%#= render camp %>

  <table class="table table-striped table table-hover table-bordered">
    <thead>
    <tr>
      <th scope="col" class="table-dark">ID</th>
      <th scope="col" class="table-dark">Name</th>
      <th scope="col" class="table-dark">City</th>
      <th scope="col" class="table-dark">Region</th>
      <th scope="col" class="table-dark">Country</th>
      <th scope="col" class="table-dark">Action</th>

    </tr>
    </thead>
    <tbody>
    <% @camps.each do |camp| %>
      <tr>
        <td><%= camp.id %></td>
        <td><%= camp.name %></td>
        <td><%= camp.city.name %></td>
        <td><%= camp.city.region.name %></td>
        <td><%= camp.city.region.country.name %></td>
        <td><%= link_to "Show this camp", camp, class: "link-info link-underline-opacity-0" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>
