<p style="color: green"><%= notice %></p>

<h1>Regions</h1>

<%= link_to "New region", new_region_path, class: "btn btn-secondary" %>

<div id="regions">
  <%#= render region %>

  <table class="table table-striped table table-hover table-bordered">
    <thead>
    <tr>
      <th scope="col" class="table-dark">ID</th>
      <th scope="col" class="table-dark">Name</th>
      <th scope="col" class="table-dark">Country</th>
      <th scope="col" class="table-dark">Action</th>
    </tr>
    </thead>
    <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.id %></td>
        <td><%= region.name %></td>
        <td><%= region.country.name %></td>
        <td><%= link_to "Show this region", region, class: "link-info link-underline-opacity-0" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>


